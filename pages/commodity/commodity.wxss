.section {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.commoditycontainer {
  width: 100%;
  height: 280rpx;
  background-color: #f8f8f9;
  border-bottom: 2rpx solid #dddee1;
}

.picturecontainer {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
}

.contentcontainer {
  margin-top: 20rpx;
  margin-left: 240rpx;
  width: 450rpx;
  height: 200rpx;
  border-radius: 5px;
}

.goodname {
  color: #000;
  font-size: 16px;
  font-family: "Microsoft YaHei";
}

.goodcontent {
  color: #495060;
  font-size: 14px;
  font-family: "Microsoft YaHei";
}

.goodlove {
  color: #2d8cf0;
  font-size: 15px;
  font-family: "Microsoft YaHei";
}
